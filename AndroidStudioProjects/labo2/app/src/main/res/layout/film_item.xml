<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <ImageView
        android:id="@+id/film_photo"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@id/film_photo"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/film_nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom du film"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/film_reputation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reputation"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/film_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/film_date_sortie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de sortie"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/film_lieu_sortie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu de sortie"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/film_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/film_photo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Description du film"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/film_description"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/increase_reputation_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+1" />

        <Button
            android:id="@+id/increase_reputation_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+3" />

        <Button
            android:id="@+id/decrease_reputation_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="-2" />
    </LinearLayout>
</RelativeLayout>
